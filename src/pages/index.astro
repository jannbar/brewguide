---
import { getCollection } from "astro:content"
import { Icon } from "astro-icon"

import Container from "../components/Container.astro"
import Layout from "../layouts/Layout.astro"
import Brew from "../components/Brew.astro"

const brews = await getCollection("brews")
---

<Layout>
  <Container>
    <header class="my-8 flex items-center justify-between">
      <h1 class="text-xl font-extrabold tracking-tight text-gray-900">brew.</h1>
      <a
        class="inline-flex items-center rounded-md bg-emerald-800 px-4 py-2 text-sm font-bold text-white transition-colors hover:bg-emerald-900"
        href="https://open.spotify.com/playlist/7aOX137yLhicZzbshZ1jfw?si=09c3458213604328"
        target="_blank"
      >
        <Icon name="radix:play" class="mr-2 h-4 w-4" />
        Playlist
      </a>
    </header>

    <ul class="space-y-8">
      {brews.map((brew) => <Brew recipe={brew} />)}
    </ul>
  </Container>
</Layout>
